{% extends 'layout.html.twig' %}

{% block body %}

<div class="container">

    <div class="row center">
        <h1>Nouveau film</h1>
    </div>

    <div class="row">
        <div class="col s12 ">
            <table>
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ movie.id }}</td>
                </tr>
                <tr>
                    <th>Movies</th>
                    <td>{{ movie.movies }}</td>
                </tr>
                <tr>
                    <th>Year</th>
                    <td>{% if movie.year %}{{ movie.year|date('d-m-Y') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Slider</th>
                    <td>{% if movie.slider %}Yes{% else %}No{% endif %}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>


    <div class="center">

        <a href="{{ path('movies_edit', { 'id': movie.id }) }}"
           data-position="bottom"
           data-delay="50"
           data-tooltip="Accueil">
            <img src="{{ asset('images/local/icons/edit.svg') }}" class="plus-icon"
                 data-position="bottom"
                 data-delay="50"
                 data-tooltip="Accueil">
        </a>

        <a class="plus-icon" href="{{ path('homepage') }}">
            <img src="{{ asset('images/local/icons/home-icon.svg') }}" class="plus-icon"
                 data-position="bottom"
                 data-delay="50"
                 data-tooltip="Accueil">
        </a>
    </div>

</div>


{% endblock %}
