{% extends 'base.html.twig' %}

{% block body %}
    <h1>Movie</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Movies</th>
                <td>{{ movie.movies }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{% if movie.year %}{{ movie.year|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Slider</th>
                <td>{% if movie.slider %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('movies_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('movies_edit', { 'id': movie.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
