{% extends 'base.html.twig' %}

{% block body %}
    <h1>Movies list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Movies</th>
                <th>Year</th>
                <th>Slider</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td><a href="{{ path('movies_show', { 'id': movie.id }) }}">{{ movie.id }}</a></td>
                <td>{{ movie.movies }}</td>
                <td>{% if movie.year %}{{ movie.year|date('Y-m-d') }}{% endif %}</td>
                <td>{% if movie.slider %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('movies_show', { 'id': movie.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('movies_edit', { 'id': movie.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('movies_new') }}">Create a new movie</a>
        </li>
    </ul>
{% endblock %}
