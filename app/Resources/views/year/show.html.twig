{% extends 'base.html.twig' %}

{% block body %}
    <h1>Year</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ year.id }}</td>
            </tr>
            <tr>
                <th>Releasedate</th>
                <td>{{ year.releaseDate }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('year_index') }}">Back to the list</a>
        </li>
        <li>
