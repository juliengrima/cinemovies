{% extends 'base.html.twig' %}

{% block body %}
    <h1>Resumes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Resume</th>
                <th>Author</th>
                <th>Actors</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for resume in resumes %}
            <tr>
                <td><a href="{{ path('resume_show', { 'id': resume.id }) }}">{{ resume.id }}</a></td>
                <td>{{ resume.resume }}</td>
                <td>{{ resume.author }}</td>
                <td>{{ resume.actors }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('resume_show', { 'id': resume.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('resume_edit', { 'id': resume.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('resume_new') }}">Create a new resume</a>
        </li>
    </ul>
{% endblock %}
